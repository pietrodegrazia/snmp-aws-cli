        <div class="col-md-12 order-md-1">
          <!-- <h4 class="mb-3">Dados</h4> -->
          <form class="needs-validation" action="/stations/<%= station.formUrlPath %>" method="post" enctype="application/x-www-form-urlencoded" novalidate>
            <input type="hidden" name="_method" value="<%= station.method %>" />
            <div class="mb-3">
              <label for="name">Nome</label>
